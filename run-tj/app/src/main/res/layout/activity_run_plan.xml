<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:id="@+id/run_plan_layout"
        android:layout_height="600dp"
        android:background="#fffafa"
        android:weightSum="100"
        android:orientation="vertical" android:textAlignment="viewEnd">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:background="@color/white">
        <TextView
                android:text="今日跑步计划"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:src="@drawable/icon2"
                android:id="@+id/ClubIcon" android:textAlignment="center" android:textSize="24sp">
        </TextView>
        <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textColor="@color/black"
                android:text="计划安排" android:textSize="24sp">
        </Button>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="110dp"
                  android:orientation="vertical"
                  android:background="@color/colorPrimary">
        <TextView
                  android:id="@+id/run_plan_name"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:text="40分钟轻松跑" android:textSize="34sp">
        </TextView>
        <TextView
                  android:id="@+id/run_intro"
                  android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:text="缓解疲劳恢复跑" android:textSize="20sp">
        </TextView>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@color/lightGrey">
        <TextView
                  android:id="@+id/run_plan_pace"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="10"
                  android:text="建议配速:7分3秒/公里" android:textSize="24sp">
        </TextView>
        <TextView
                  android:id="@+id/run_plan_time"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="10"
                  android:text="全程时长:40分钟" android:textSize="24sp">
        </TextView>
        <TextView
                  android:id="@+id/run_plan_groups"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="20"
                  android:text="组数:1组" android:textSize="24sp">
        </TextView>
    </LinearLayout>
    <Button
            android:id="@+id/run_plan_accomplish"
            android:layout_width="210dp" android:layout_height="90dp" android:text="去完成"
            android:background="?android:attr/textColorLink" android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp" android:textSize="24sp">

    </Button>

</LinearLayout>