<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="#ffffff"
             tools:context="Fragment.clubFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/headFrame"
            android:background="#4169e1">
        <bean.HeadFrameLayout
                android:id="@+id/headFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        <Button
                android:text="搜索"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/button6"
                android:background="@drawable/button_club"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:id="@+id/TopLayer"
            android:layout_below="@+id/headFrame">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/button_club"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:text="消息"/>
        <TextView
                android:layout_width="3dp"
                android:layout_height="70dp"/>
        <Button
                android:text="社团列表"
                android:layout_width="wrap_content"
                android:background="@drawable/button_club"
                android:layout_height="70dp"
                android:id="@+id/button4"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="3dp"
                android:layout_height="70dp"/>
        <Button
                android:text="朋友圈"
                android:layout_width="wrap_content"
                android:background="@drawable/button_club"
                android:layout_height="70dp"
                android:id="@+id/button3"
                android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/TopLayer">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chatFrame"
                android:orientation="vertical">
            <bean.ChatLayout
                    android:id="@+id/chatLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>